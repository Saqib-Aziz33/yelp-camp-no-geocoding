<main class="container my-5">

        <h1 class="text-center">New Campground</h1>

        <div class="card general-form my-3">
            <div class="card-body">
                <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="my-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" required type="text" name="campground[title]" id="title" placeholder="Enter campground title">
                        <div class="valid-feedback">seems goods</div>
                        <div class="invalid-feedback">Feild is required</div>
                    </div>
                    <div class="my-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" required type="text" name="campground[location]" id="location" placeholder="eg, Phagwari, Rawalpindi">
                        <div class="valid-feedback">seems goods</div>
                        <div class="invalid-feedback">Feild is required</div>
                    </div>
                    <div class="my-3">
                        <label for="formFile" class="form-label">Upload Images</label>
                        <input class="form-control" type="file" id="formFile" name="image" multiple>
                    </div>
                    <div class="my-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text">&dollar;</span>
                            <input class="form-control" required type="text" name="campground[price]" id="price" placeholder="price per night">
                            <div class="valid-feedback">seems goods</div>
                            <div class="invalid-feedback">Feild is required</div>
                        </div>
                    </div>
                    <div class="my-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" required name="campground[description]" id="description" placeholder="Describe about your campground...." cols="30" rows="5"></textarea>
                        <div class="valid-feedback">seems goods</div>
                        <div class="invalid-feedback">Feild is required</div>
                    </div>
        
                    <button class="btn btn-success">Add Campground</button>
                </form>
            </div>
          </div>

        

</main>